{
  "ts-node": {
    "files": true
  },
  // "include": ["src/types/global.d.ts"],
  // "files": ["src/types/global.d.ts"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2021"],
    "types": ["node", "jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
